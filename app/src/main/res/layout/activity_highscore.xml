<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_empty"
    android:orientation="vertical"
    tools:context=".HighScore">
    <TextView
        android:id="@+id/highScoreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        android:text="@string/highscore_table"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:textSize="60sp"
        android:textStyle="bold"
        android:typeface="normal" />

        <ListView
            android:id="@+id/lv_highscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="100dp"
            android:divider="#00000000"
            android:dividerHeight="15sp"
            android:layout_below="@id/highScoreTitle" />



    <TextView
        android:id="@+id/backBtn_tv"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/back_button_arrow"
        android:backgroundTint="@color/colorAccent"
        android:gravity="center"
        android:text="@string/back_btn"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/volume_iv_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_volume_up_black_24dp" />

</RelativeLayout>


